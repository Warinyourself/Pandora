.image-worker
  height 262px
  padding 0
  overflow hidden
  &.drop--focus
    height 262px
  &.drop--empty
    &.drop--active
      height 262px

.image-editor
  height 262px
  width 100%
  background-repeat no-repeat
  background-size cover

.image-worker-colors
  position absolute
  padding 4px
  left 0
  bottom 0
  background rgba(0, 0, 0, .8)
  width: 100%
  