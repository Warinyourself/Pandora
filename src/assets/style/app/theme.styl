.theme-button
  position absolute
  bottom 10px
  left 10px

.theme--dark.v-navigation-drawer
  background var(--v-bg-darken1)

.theme--dark.v-application
  background var(--v-bg-base)

.v-application .v-main__wrap
  background var(--v-bg-base)

html.theme--dark
  background var(--v-bg-base)

  .v-tab.v-tab--active
    color white

  .v-footer
    border-top-color var(--v-bg-darken1)!important

  ::-webkit-scrollbar
    width 5px
    height 4px
    &:hover
      cursor pointer

  ::-webkit-scrollbar-track, ::-webkit-scrollbar-corner, ::-webkit-resizer
    background var(--v-bg-darken1)

  ::-webkit-scrollbar-thumb
    background var(--v-primary-base)
    border-radius 2px

  .icon-invert
    stroke white

  .order-block--simple .order-block-title
    color white